<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="cornerRadius">@dimen/border_radius_large</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
    </style>
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="hintTextAppearance">@style/hintTextAppearance</item>
        <item name="errorTextAppearance">@style/errorTextAppearance</item>
        <!--        <item name="tint">@color/greyEditTextHint</item>-->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyApp.LargeComponent</item>
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item><!-- remove hint-->
        <item name="hintEnabled">false</item>
<!--        <item name="boxStrokeColor">@color/text_input_box_stroke</item>-->
        <item name="boxStrokeWidthFocused">@dimen/border_width_normal</item>
        <!--        <item name="background">@color/text_input_box_stroke</item>-->
        <!--        <item name="boxBackgroundColor">@color/background_edit_text</item>-->
    </style>

    <style name="hintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="errorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox_dense_h</item>
    </style>

    <style name="MyTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">@dimen/padding_xnormal</item>
        <item name="android:paddingBottom">@dimen/padding_xnormal</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/border_radius_medium</item>
    </style>

    <style name="editText.singleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="editText.multiLine">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:gravity">top|right</item>
        <item name="android:maxHeight">@dimen/_100dp</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
    </style>



</resources>