<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="@dimen/android_half_standard_margin_padding"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_slide_two"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_two_head_title"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top_slider_head_title"
        android:gravity="center"
        android:textAppearance="@style/textAppearance.size20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/slide_two_description_content"
        android:layout_marginTop="@dimen/margin_top_slider_head_title"
        android:gravity="center"
        android:textAppearance="@style/textAppearance.size14"/>
</LinearLayout>

