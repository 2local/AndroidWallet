<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/android_half_standard_margin_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_slide_three" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_slider_head_title"
        android:text="@string/slide_three_head_title"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/textAppearance.size20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_slider_head_title"
        android:text="@string/slide_three_description_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textAppearance="@style/textAppearance.size14" />
</LinearLayout>


