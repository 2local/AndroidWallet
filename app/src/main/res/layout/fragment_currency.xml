<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.android.l2l.twolocal.view.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tv_show_back="true"
        app:tv_title="@string/fragment_currency_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dollar_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:background="@drawable/selector_ripple_effect_settings_currency"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_currency_us_dollar"
            android:textAppearance="@style/textAppearance.size16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_USD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_currency_type"
            android:enabled="false"
            android:minWidth="48dp"
            android:paddingStart="11dp"
            android:paddingTop="2dp"
            android:paddingEnd="11dp"
            android:paddingBottom="2dp"
            android:text="@string/usd"
            android:textAppearance="@style/textAppearance.size16.gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:alpha="0.2"
        android:background="@color/divider_color" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/euro_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:background="@drawable/selector_ripple_effect_settings_currency"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_currency_euro"
            android:textAppearance="@style/textAppearance.size16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_currency_type"
            android:enabled="false"
            android:paddingStart="11dp"
            android:paddingTop="2dp"
            android:paddingEnd="11dp"
            android:paddingBottom="2dp"
            android:text="@string/fragment_currency_eur"
            android:textAppearance="@style/textAppearance.size16.gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

