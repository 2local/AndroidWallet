<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chartBar"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_160dp"
    android:background="@android:color/transparent"
    android:padding="0dp">

    <View
        android:id="@+id/view_income_feb"
        android:layout_width="@dimen/_5dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_zero_feb"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/selector_chart_view_income" />

    <FrameLayout
        android:id="@+id/view_zero_feb"
        android:layout_width="@dimen/_5dp"
        android:layout_height="@dimen/_2dp"
        android:layout_centerVertical="true"
        android:alpha="0.4"
        android:background="@drawable/selector_chart_view_zero" />

    <View
        android:id="@+id/view_expense_feb"
        android:layout_width="@dimen/_5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_zero_feb"
        android:layout_gravity="center"
        android:alpha="0.4"
        android:visibility="gone"
        android:background="@drawable/selector_chart_view_expense" />

</merge>
