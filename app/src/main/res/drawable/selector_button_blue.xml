<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_blue" />
            <padding android:bottom="@dimen/android_standard_margin" android:left="@dimen/android_standard_margin" android:right="@dimen/android_standard_margin" android:top="@dimen/android_standard_margin" />
            <corners android:radius="@dimen/standard_button_radius" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_blue_pressed" />
            <padding android:bottom="@dimen/android_standard_margin" android:left="@dimen/android_standard_margin" android:right="@dimen/android_standard_margin" android:top="@dimen/android_standard_margin" />
            <corners android:radius="@dimen/standard_button_radius" />
        </shape>

    </item>
</selector>